{
  "name": "@flight/monorepo",
  "version": "1.0.0",
  "description": "Monorepo for Eagle plugin and web frontend",
  "private": true,
  "type": "module",
  "workspaces": [
    "packages/*"
  ],
  "scripts": {
    "build": "node build.esbuild.js",
    "build:mock": "node build.esbuild.js --mock",
    "dev": "node build.esbuild.js --watch",
    "dev:mock": "node build.esbuild.js --watch --mock",
    "serve": "node dev-server.js",
    "start": "npm run build && npm run serve",
    "start:mock": "npm run build:mock && npm run serve",
    "clean": "rm -rf dist"
  },
  "devDependencies": {
    "esbuild": "^0.19.12",
    "typescript": "^5.0.0"
  },
  "engines": {
    "node": "16.x",
    "npm": ">=7.0.0"
  }
}
